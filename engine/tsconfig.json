{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "../resources/built",
        "watch": true,
        "allowJs": true,
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "lib": [
            "dom",
            "es2015",
            "es2017"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*"
    ]
}